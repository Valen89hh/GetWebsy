import { twMerge } from 'tailwind-merge';

// Props
const { class: className = "", aos } = Astro.props;

// Clases base
const baseClasses = "text-md font-agrandir-bold text-secondary";

// Combinar usando twMerge
const finalClass = twMerge(baseClasses, className);
---

<p class={finalClass} data-aos={aos}>
  <slot />
</p>
