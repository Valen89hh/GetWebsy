---
// Importar la funci√≥n
import { twMerge } from 'tailwind-merge';

// Props
const { class: className = "", aos } = Astro.props;

// Clases base
const baseClasses = "text-3xl font-agrandir-bold text-white";

// Combinar usando twMerge
const finalClass = twMerge(baseClasses, className);
---

<h2 class={finalClass} data-aos={aos}>
  <slot />
</h2>
