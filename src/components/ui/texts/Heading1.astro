---
// Importar la funci√≥n
import { twMerge } from 'tailwind-merge';

// Props
const { class: className = "", aos } = Astro.props;

// Clases base
const baseClasses = "text-4xl font-agrandir-bold text-white";

// Combinar usando twMerge
const finalClass = twMerge(baseClasses, className);
---

<h1 class={finalClass} data-aos={aos}>
  <slot />
</h1>
